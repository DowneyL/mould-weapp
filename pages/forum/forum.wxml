<!--pages/forum/forum.wxml-->
<view class="container">
    <view class="page-body">
        
        <view>
            <block wx:for-items="{{group_list}}">

                <view class="weui-cells-title">
                    {{item.name}}
                </view>

                <view class="weui-cells">

                    <block wx:for-items="{{item.sub_group}}" wx:for-item="sub_group">
                        <view class="weui-cell" bindtap="toForumList" data-fid="{{sub_group.fid}}">
                            <view> 
                                <view>{{sub_group.name}}</view>
                                <view class="sub_group_note"> 
                                    主题: {{sub_group.threads}} 帖子: {{sub_group.posts}}
                                </view> 
                            </view>
                        </view>
                    </block>

                </view>
            </block>
        </view>

  </view>
</view>