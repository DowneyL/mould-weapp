.article-info .article-in{
  color:#c7c7c7;
  margin:0 20rpx;
}
*/

.article-info .article-by{
  color:#c7c7c7;
  margin-right:20rpx;
}

.article-img{
    position: relative;
    width: 100%;
    height: 200rpx;
    overflow: hidden;
    background-position: 50%;
    background-size: cover;
    -webkit-transform: translateZ(0);
    transform: translateZ(0);
}

.article-img-info{
    position: absolute;
    top: 50%;
    left: 0;
    height: 100%;
    width: 100%;
    -webkit-transform: translateY(-50%);
    transform: translateY(-50%);
    overflow: hidden;
}

.article-img-item {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 100%;
    -webkit-transform: translate3d(-50%,-50%,0);
    transform: translate3d(-50%,-50%,0);
}

.article-message{
  padding:16rpx 0;
  color: #909090;
  font-size: 30rpx;
}

.article-ext-info{
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  margin:20rpx 0 0 0;
  color: #c7c7c7; 
}

.article-ext-info .article-re{
  display: flex;
  flex-flow: row nowrap;
}

.article-ext-info .article-re .zan-icon{
  color:#f44444;
}

.article-ext-info .article-re view{
  margin-right:20rpx;
}

.forum{
  padding: 20rpx;
  margin-top:20rpx;
  background-color:#fff;
}

.forum_info{
  padding:10rpx 0;
  border-bottom: 1px solid #efefef;
}

.forum_title{
  font-size:36rpx;
}

.forum_note{
  color:#999;
  font-size:14px;
}

.top_subject .zan-tag{
  margin:20rpx 0 10rpx 0;
}

.top_subject .zan-ellipsis{
  margin: 8rpx 0;
}


.thread_order{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  background-color: white;
  margin-top: 20rpx;
}

.thread_order_ite{
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  width: 33%;
  text-align: center;
}

.thread_order_border{
  border-bottom: 5rpx solid #179b16;
}

.edit-cell{
  z-index: 100;
  position: fixed;  
  right: 50rpx;  
  bottom: 50rpx;  
  width: 88rpx;
  height: 88rpx;  
}

.edit-cell-img {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  opacity: 0.8;
}