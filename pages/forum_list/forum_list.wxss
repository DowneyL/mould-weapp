/**index.wxss**/

.article {
  margin-top: 5rpx;
  padding: 20rpx 30rpx 20rpx 30rpx;
  align-items: center;
  background-color: white;
}

.article-content {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
 }

.article-msg {
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-right: 20rpx;
}

.article-info {
}

.article-title {
  height: 120rpx;
  font-size: 38rpx;
  overflow: hidden; 
/*  white-space: nowrap; */
  text-overflow: ellipsis;
 }

.article-fid {
  display: flex;
  flex-direction: row;
}

.article-fid-item {
  font-size: 22rpx;
  border-radius: 10rpx;
  border: 0.1rpx solid orange;
  color: orange;
  padding: 0rpx 5rpx 0rpx 5rpx;
}

.article-author {
  color:#999;
  width: 100%;
  font-size: 22rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.article-img {

}

.article-img-item {
    border-radius: 15rpx;
    width: 200rpx;
    height: 200rpx;   
}

.forum_info {
  margin-top: 5rpx;
  padding: 20rpx 30rpx 20rpx 30rpx;
  background-color: white;
}

.forum_title {
  font-size:17px
}

.forum_note {
  margin-top: 10rpx;
  color:#999;
  font-size:14px;
}

.top_subject {
  margin-top: 2rpx;
  padding: 10rpx 30rpx;
  background-color: white;
}

.top_subject_note {
  color:#999;
}

.top_subject_item {
  padding-top: 5rpx;
  padding-bottom: 5rpx;
  display: flex;
  flex-direction: row;
}

.top_subject_item_tip_cell {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.top_subject_item_tip {
  background-color: #179b16;
  color: white;
  padding: 0rpx 5rpx 0rpx 5rpx;
  margin-right: 10rpx;
  font-size: 22rpx;
}

.thread_order {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  background-color: white;
  margin-top: 20rpx;
}

.thread_order_item {
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  width: 33%;
  text-align: center;
}

.thread_order_border {
  border-bottom: 5rpx solid #179b16;
}

.edit-cell {
  z-index: 100;
  position: fixed;  
  right: 80rpx;  
  bottom: 120rpx;  
  width: 100rpx;
  height: 100rpx;  
  /*border-top: 1rpx solid gray;*/
  /*background-color: white;*/
}

.edit-cell-img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  opacity: 0.7;
}